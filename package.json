{
  "name": "workquest",
  "version": "0.1.0",
  "description": "WorkQuest - fun office To-Do + Daily Activity Tracker",
  "main": "dist/electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "esbuild electron/main.ts --bundle --platform=node --external:electron --external:better-sqlite3 --outdir=dist/electron --sourcemap --watch",
    "dev:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outdir=dist/electron --sourcemap --watch",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm:dev:main\" \"npm:dev:preload\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "build:renderer": "vite build",
    "build:main": "esbuild electron/main.ts --bundle --platform=node --external:electron --external:better-sqlite3 --outdir=dist/electron",
    "build:preload": "esbuild electron/preload.ts --bundle --platform=node --external:electron --outdir=dist/electron",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "start": "electron .",
    "pack": "npm run build && cross-env ELECTRON_BUILDER_DISABLE_SEVEN_ZIP_SYMLINKS=true ELECTRON_BUILDER_DISABLE_SYMLINKS=true electron-builder --dir",
    "dist": "npm run build && cross-env ELECTRON_BUILDER_DISABLE_SEVEN_ZIP_SYMLINKS=true ELECTRON_BUILDER_DISABLE_SYMLINKS=true electron-builder"
  },
  "dependencies": {
    "bonjour-service": "^1.3.0",
    "dayjs": "^1.11.10",
    "electron-store": "^8.1.0",
    "exceljs": "^4.4.0",
    "html2canvas": "^1.4.1",
    "pinia": "^2.1.7",
    "uuid": "^9.0.1",
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "ws": "^8.18.3"
  },
  "optionalDependencies": {
    "better-sqlite3": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.4",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.20.2",
    "typescript": "^5.4.5",
    "vite": "^5.1.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.workquest.desktop",
    "productName": "WorkQuest",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "db/migrations/**/*",
      "assets/**/*",
      "package.json"
    ],
    "icon": "assets/icon.png",
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "WorkQuest-Setup-${version}.exe",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
