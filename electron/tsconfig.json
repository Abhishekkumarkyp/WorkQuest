{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "../dist/electron",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "types": ["node", "electron"],
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../db/**/*.ts"]
}
